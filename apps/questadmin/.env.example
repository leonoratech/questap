# Copy this file to .env.local and fill in your Firebase credentials
# These should be the same credentials used in the questedu app

# Storage Provider Configuration
# Choose one: 'firebase' or 'supabase'
STORAGE_PROVIDER=firebase

# Firebase Configuration (REQUIRED)
NEXT_PUBLIC_FIREBASE_API_KEY=your-actual-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-actual-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Firebase Admin Configuration (for server-side operations)
NEXT_PUBLIC_FIREBASE_CLIENT_EMAIL=your-firebase-client-email
NEXT_PUBLIC_FIREBASE_PRIVATE_KEY=your-firebase-private-key

# Supabase Storage Configuration (when STORAGE_PROVIDER=supabase)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# SUPABASE_STORAGE_BUCKET=course-images

# JWT Configuration (REQUIRED FOR SECURITY)
# Generate a secure random secret: openssl rand -base64 64
JWT_SECRET=your-secure-jwt-secret-at-least-32-characters-long-replace-with-actual-secret
JWT_EXPIRES_IN=24h

# Security Configuration (OPTIONAL)
ALLOWED_ORIGINS=http://localhost:3001,https://yourdomain.com
NODE_ENV=development

# Development Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001
